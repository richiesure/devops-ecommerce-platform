        stage('Package') {
            steps {
                echo 'Packaging product-service...'
                dir('product-service') {
                    sh 'tar -czf product-service.tar.gz .'
                }
            }
        }

        stage('Deploy') {
            parallel {

                stage('Deploy to Server 1') {
                    steps {
                        sh """
                        scp -o StrictHostKeyChecking=no product-service/product-service.tar.gz ec2-user@${APP_SERVER_1}:/tmp/
                        ssh -o StrictHostKeyChecking=no ec2-user@${APP_SERVER_1} '
                            mkdir -p ~/services/product-service
                            tar -xzf /tmp/product-service.tar.gz -C ~/services/product-service
                        '
                        """
                    }
                }

                stage('Deploy to Server 2') {
                    steps {
                        sh """
                        scp -o StrictHostKeyChecking=no product-service/product-service.tar.gz ec2-user@${APP_SERVER_2}:/tmp/
                        ssh -o StrictHostKeyChecking=no ec2-user@${APP_SERVER_2} '
                            mkdir -p ~/services/product-service
                            tar -xzf /tmp/product-service.tar.gz -C ~/services/product-service
                        '
                        """
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ Product service deployed successfully'
        }
        failure {
            echo '❌ Product service deployment failed'
