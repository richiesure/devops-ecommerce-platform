pipeline {
    agent any

    environment {
        SERVICE_NAME = 'user-service'
        SERVICE_PORT = '3000'   // user-service runs on 3000, not 8080
        APP_SERVER_1 = '10.0.11.51'
        APP_SERVER_2 = '10.0.12.197'
        GITHUB_REPO = 'https://github.com/richiesure/devops-ecommerce-platform.git'
    }

    stages {
<<<<<<< HEAD

        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                git branch: 'main',
                    url: "${GITHUB_REPO}",
                    credentialsId: 'gits-cred'
=======
>>>>>>> b0335a3 (Fix Jenkinsfiles: correct GitHub URL, remove duplicate checkout, fix workspace cleanup)
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing Node.js dependencies...'
                dir('user-service') {
                    sh '''
                        node --version
                        npm --version
                        npm install --omit=dev
                    '''
                }
            }
        }

        stage('Security Scan') {
            steps {
                echo 'Running npm audit (non-blocking)...'
                dir('user-service') {
                    sh 'npm audit || echo "Audit completed with warnings"'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging service...'
                dir('user-service') {
                    sh 'tar -czf user-service.tar.gz .'
                }
            }
        }

        stage('Deploy to App Servers') {
            parallel {

                stage('Deploy to Server 1') {
                    steps {
                        sh """
                        scp -o StrictHostKeyChecking=no user-service/user-service.tar.gz ec2-user@${APP_SERVER_1}:/tmp/
                        ssh -o StrictHostKeyChecking=no ec2-user@${APP_SERVER_1} '
                            mkdir -p ~/services/user-service
                            tar -xzf /tmp/user-service.tar.gz -C ~/services/user-service
                            cd ~/services/user-service
                            npm install --omit=dev
                            pm2 restart user-service || pm2 start server.js --name user-service
                        '
                        """
                    }
                }

                stage('Deploy to Server 2') {
                    steps {
                        sh """
                        scp -o StrictHostKeyChecking=no user-service/user-service.tar.gz ec2-user@${APP_SERVER_2}:/tmp/
                        ssh -o StrictHostKeyChecking=no ec2-user@${APP_SERVER_2} '
                            mkdir -p ~/services/user-service
                            tar -xzf /tmp/user-service.tar.gz -C ~/services/user-service
                            cd ~/services/user-service
                            npm install --omit=dev
                            pm2 restart user-service || pm2 start server.js --name user-service
                        '
                        """
                    }
                }

            }
        }

        stage('Verify Deployment') {
            steps {
                echo 'Running health checks...'
                sh """
                    sleep 5
                    curl -f http://${APP_SERVER_1}:${SERVICE_PORT}/health
                    curl -f http://${APP_SERVER_2}:${SERVICE_PORT}/health
                """
            }
        }
    }

    post {
        success {
            echo '✅ User Service deployed successfully to both servers'
        }
        failure {
            echo '❌ Deployment failed – check logs'
        }
        always {
            deleteDir()
        }
    }
}
